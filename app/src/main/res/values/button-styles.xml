<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimaryLight</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="AppTheme.ThinButton" parent="AppTheme.Button">
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">6dp</item>
    </style>

    <style name="AppTheme.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="AppTheme.Button.Unelevated" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/colorPrimaryLight</item>
    </style>

</resources>
